<p id="notice"><%= notice %></p>

<h1>Merchants</h1>

<table>
  <thead>
    <tr>
      <th>Reference</th>
      <th>Email</th>
      <th>Live on</th>
      <th>Disbursement frequency</th>
      <th>Minimum monthly</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.reference %></td>
        <td><%= merchant.email %></td>
        <td><%= merchant.live_on %></td>
        <td><%= merchant.disbursement_frequency %></td>
        <td><%= merchant.minimum_monthly %></td>
        <td><%= link_to 'Show', merchant %></td>
        <td><%= link_to 'Edit', edit_merchant_path(merchant) %></td>
        <td><%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

